@import 'nib'
@import 'jeet'

@import './banner'
@import './form-interaction-example'
@import './generic-content'

global-reset()

html
  height 102%
  overflow-y scroll

strong
  font-weight bold

body
    +below(1050px)
        margin-left     10px
        margin-right    20px

h1
h2
    font-family Helvetica,Arial,sans-serif
    font-weight bold
    padding-bottom  15px
    padding-top 15px
    vertical-align baseline

h1
  font-size 1.5em
  +mobile
    font-size 1.2em


#container
    center(1040px)
    margin-top  15px

    .header
      cf()
      box-shadow inset 1px 1px 50px 0px rgba(0,0,0,0.75)
      background #B03500 url("../assets/images/overlay.png") repeat
      .logo-container
        center(400px)
        padding-top 20px
        padding-bottom 20px
        text-align center
        .logo
          fill #fff
          display block
          margin 0 auto

    .item
      .header
        background url(../assets/images/bg_pattern.png)
        margin-bottom   15px

    .container
      cf()
      margin-top  15px

      .page-content
        col(1)
        +below(667px)
          width 100%
        +mobile()
          margin-left  0
        .section
          margin-bottom 15px
          padding 15px
          +mobile()
            padding 5px

        .intro
        .aboutme
          line-height 25px
          position relative
          padding  15px

          p
            margin-top  15px

          &:after
            content: "";
            background url(../assets/images/wac.jpg)
            opacity 0.2
            background-size cover
            top 0
            left 0
            bottom 0
            right 0
            position absolute
            z-index -1

    .nav
        col(1, cycle: 2)
        padding-bottom 10px

        a
          +mobile()
            width 100%
          display inline-block
          padding-left 5px
          color   #fff
          text-decoration none
          padding 5px 8px
          svg
          span
            display inline-block
          svg
            height 30px
            width 30px
            fill #fff

          span
            position  relative
            top  -10px
            margin-left  10px

          &:hover
            svg
              transform rotate(15deg)

          &.active
            cursor default
            border-bottom 2px solid #fff
            color #fff
            svg
              transform rotate(0deg)
              font-size 1em


footer
    margin-top 15px
    .large
      font-size 3em
    +mobile()
      padding-left 10px
      .large
        font-size 2.3em
    .content
      center(400px)
    color #fff
    background-color #00838C
    line-height 45px
    margin-bottom   10px
    padding-top 25px
    padding-bottom 25px
    +mobile()
      p
        display  none
